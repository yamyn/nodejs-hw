{
    "name": "nodejs-hw",
    "version": "1.0.0",
    "description": "Home work for node.js course in GoIT Academy",
    "main": "index.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "start": "node ./src/index.js",
        "dev": "npx nodemon ./src/index.js",
        "commit": "npx git-cz ",
        "migrate:up": "npx migrate-mongo up -f ./mongo-migrations/migrate-mongo-config.js",
        "migrate:down": "npx migrate-mongo down -f ./mongo-migrations/migrate-mongo-config.js",
        "migrate:status": "npx migrate-mongo status -f ./mongo-migrations/migrate-mongo-config.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/yamyn/nodejs-hw.git"
    },
    "author": "Yaroslav Mynchenko",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/yamyn/nodejs-hw/issues"
    },
    "homepage": "https://github.com/yamyn/nodejs-hw#readme",
    "devDependencies": {
        "commitizen": "4.0.3",
        "cz-conventional-changelog": "3.1.0",
        "eslint": "6.8.0",
        "eslint-config-airbnb-base": "14.0.0",
        "eslint-plugin-import": "2.20.1",
        "nodemon": "2.0.2"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "dependencies": {
        "@hapi/joi": "17.1.1",
        "body-parser": "1.19.0",
        "compression": "1.7.4",
        "cors": "2.8.5",
        "dotenv": "^8.2.0",
        "express": "4.17.1",
        "helmet": "3.23.2",
        "migrate-mongo": "8.1.1",
        "mongoose": "5.9.25",
        "morgan": "1.10.0",
        "shortid": "2.2.15"
    }
}
